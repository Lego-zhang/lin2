/* components/tab-bar/index.wxss */
.sleeve {
  color: #157658 !important;

  font-family: sleeve !important;
}

.container {
  display: flex;
  flex-direction: row;

  width: 100%;
  height: 100rpx;

  background-color: #ffffff;
}

.btn-font {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;

  color: #ffffff;

  font-size: 32rpx;
}

.buy {
  width: 260rpx;
  height: 100%;

  background-color: #157658;
}

.cart {
  width: 260rpx;
  height: 100%;

  background-color: #333333;
}

.icons {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;

  box-sizing: border-box;
  width: 230rpx;
  height: 100%;
  padding-right: 22rpx;
  padding-left: 16rpx;

  color: #999999;
}

.icons > view {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;

  width: 50%;
  height: 100%;
}

.icons > view:nth-child(2) {
  padding-top: 6rpx;
}

.icons text {
  font-size: 20rpx;
}
