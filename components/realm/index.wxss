/* components/realm/index.wxss */
.container {
  box-sizing: border-box;
  min-height: 700rpx;
  max-height: 1000rpx;
  margin-bottom: 100rpx;
  /*padding:30rpx;*/

  background-color: #ffffff;
}

.inner-container {
  padding: 30rpx 30rpx 0 30rpx;
}

.sku-preview {
  display: flex;
  flex-direction: row;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  margin-left: 40rpx;
}

.discount-price {
  margin-left: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  flex-direction: row;
}

.sku-pending {
  font-size: 20rpx;
}

.sku-pending > text:first-child {
  color: #999999;
}

.sku-pending > text:nth-child(2) {
  color: #666666;
}

.hr {
  width: 690rpx;
  height: 2rpx;
  margin-top: 30rpx;

  background-color: #e9e9e9;
}

.stock {
  margin-left: 30rpx;

  color: #999;

  font-size: 20rpx;
}

.stock-pinch {
  margin-left: 30rpx;

  color: #d20109;

  font-size: 20rpx;
}

.counter-container {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;

  margin-top: 34rpx;
  padding-bottom: 100rpx;
}

.counter-container text {
  color: #555555;

  font-size: 24rpx;
}

.bottom-btn {
  position: absolute;
  bottom: 0;

  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;

  width: 100%;
  height: 100rpx;

  background-color: #333333;
}

.out-stock {
  background-color: #dcebe6;
}

.bottom-btn text {
  color: #ffffff;
}
