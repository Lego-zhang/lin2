/* components/spu-description/index.wxss */
.sleeve {
  color: #157658 !important;

  font-family: sleeve !important;
}

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  box-sizing: border-box;
  width: 100%;
  padding: 34rpx 30rpx 26rpx 30rpx;

  background-color: #ffffff;
}

.tags {
  display: flex;
}

.l-tag {
  margin-right: 6rpx !important;
}

.left {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.subtitle {
  margin-top: 40rpx;
  margin-bottom: 16rpx;

  color: #999999;

  font-size: 28rpx;
  font-weight: 400;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.l-price-unit {
  margin-right: 14rpx !important;
}

.discount-price {
  margin-right: 80rpx;
  margin-left: 20rpx;
}

.discount-tag {
  position: relative !important;
  bottom: 4rpx;

  width: 50rpx;

  border-radius: 20rpx !important;
}

.right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;

  width: 78rpx;
  height: 120rpx;
  margin-left: 20rpx;

  border-left: 2px dashed #f5f5f5;
}

.inner {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;

  width: 50rpx;
  height: 120rpx;

  background-color: #dcebe6;
}

.inner text {
  color: #157658;

  font-size: 20rpx;
}
