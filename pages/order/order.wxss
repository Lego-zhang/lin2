.container {
  padding-bottom: 100rpx;
}

.order-item-container {
  box-sizing: border-box;
  width: 750rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 30rpx;

  background-color: #ffffff;
}

.order-item {
  margin-bottom: 20rpx !important;
}

