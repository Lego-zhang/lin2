.order-item-container s-order-sku-item:last-child .order-item {
  margin-bottom: 0 !important;
  /*background-color: #ff6600;*/
}

.temp-price-container {
  display: flex;
  flex-direction: column;

  box-sizing: border-box;
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;

  color: #333333;
  background-color: #ffffff;

  font-size: 24rpx;
}

.origin-price-container {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.discount-price-container {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.discount-price {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.minus-tag {
  margin-right: 4rpx;
  /*order: -1;*/
}

.discount-color {
  color: #f55670;
}

.bottom {
  position: fixed;
  bottom: 0;

  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;

  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;

  background-color: #ffffff;
  box-shadow: 0px 0px 4px 0px rgba(210, 210, 210, 0.5);
}

.price-container {
  /*height: 60rpx;*/
  display: flex;
  align-items: center;
  flex-direction: row;

  color: #333333;

  font-size: 28rpx;
}

.price-container > text {
  margin-right: 20rpx;
}

.submit {
  border-radius: 0 !important;
}

